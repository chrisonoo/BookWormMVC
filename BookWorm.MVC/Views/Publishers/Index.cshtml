@model IEnumerable<BookWorm.MVC.ViewModels.PublisherViewModel>

@{
    ViewData["Title"] = "Publishers";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@if(Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Publisher.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BookCount)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Publisher.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BookCount)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Publisher.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Publisher.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Publisher.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No publishers available.</p>
}